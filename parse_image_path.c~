#include "parse_image_path.h"
#include<string.h>
//文件名必须取成"image+num.jpg"
void parse_image_path(int num,char *path)
{	
	char tmp_num[20] = {0};
	int2str(num, tmp_num);
	path[0] = '\0';
	strcat(path,"pic/image");
	strcat(path,tmp_num);
	strcat(path,".jpg");
	strcat(path,"\0");
	printf("%s\n",path);
}
//文件名必须取成"+num.gif"
void parse_avatar_path(int num,char *path)
{	
	char tmp_num[20] = {0};
	int2str(num, tmp_num);
	path[0] = '\0';
	strcat(path,"Icon/");
	strcat(path,tmp_num);
	strcat(path,".gif");
	strcat(path,"\0");
	printf("%s\n",path);
}
